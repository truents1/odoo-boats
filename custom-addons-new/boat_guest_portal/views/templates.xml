<odoo>
  <template id="boat_list" name="Boat List" inherit_id="website.layout">
    <xpath expr="//main" position="inside">
      <section class="container mt-4">
        <h1>Boats</h1>
        <div class="row">
          <t t-foreach="boats" t-as="b">
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">
                    <a t-att-href="'/boats/%s' % b.id"><t t-esc="b.name"/></a>
                  </h5>
                  <p><t t-esc="b.region_id.name"/></p>
                  <p>From: <t t-esc="b.price_rent"/> <t t-esc="b.currency_id.name"/></p>
                </div>
              </div>
            </div>
          </t>
        </div>
      </section>
    </xpath>
  </template>

  <template id="boat_detail" name="Boat Detail" inherit_id="website.layout">
    <xpath expr="//main" position="inside">
      <section class="container mt-4">
        <h1><t t-esc="boat.name"/></h1>
        <p><t t-raw="boat.description_html"/></p>
        <p>Region: <t t-esc="boat.region_id.name"/></p>
        <p>Capacity: <t t-esc="boat.guest_capacity"/></p>
        <a t-att-href="'/book/%s' % boat.id" class="btn btn-primary">Book</a>
      </section>
    </xpath>
  </template>
</odoo>
