<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Categories -->
        <record id="module_category_boats" model="ir.module.category">
            <field name="name">Boats Platform</field>
            <field name="description">Category for boat management</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- Guest Group (Portal Users who book boats) -->
        <record id="group_guest" model="res.groups">
            <field name="name">Guest/Traveler</field>
            <field name="category_id" ref="module_category_boats"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="comment">Guests can browse boats and make bookings</field>
        </record>
        
        <!-- Boat Owner Group (Portal Users who list boats) -->
        <record id="group_boat_owner" model="res.groups">
            <field name="name">Boat Owner</field>
            <field name="category_id" ref="module_category_boats"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="comment">Boat owners can list and manage their boats</field>
        </record>
        
        <!-- Boat Administrator Group -->
        <record id="group_boat_admin" model="res.groups">
            <field name="name">Boat Administrator</field>
            <field name="category_id" ref="module_category_boats"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Administrators can moderate listings and manage master data</field>
        </record>
        
        <!-- Boat Manager Group (Full Access) -->
        <record id="group_boat_manager" model="res.groups">
            <field name="name">Boat Manager</field>
            <field name="category_id" ref="module_category_boats"/>
            <field name="implied_ids" eval="[(4, ref('group_boat_admin'))]"/>
            <field name="comment">Managers have full access to all boat platform features</field>
        </record>
        
        <!-- Record Rules for Boat Listings -->
        
        <!-- Rule: Boat Owners can only see and edit their own boats -->
        <record id="boat_listing_owner_rule" model="ir.rule">
            <field name="name">Boat Owner: Own Boats Only</field>
            <field name="model_id" ref="model_boat_listing"/>
            <field name="domain_force">[('owner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_boat_owner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Public/Guests can only see approved and active boats -->
        <record id="boat_listing_public_rule" model="ir.rule">
            <field name="name">Public: Approved Boats Only</field>
            <field name="model_id" ref="model_boat_listing"/>
            <field name="domain_force">[('moderation_status', '=', 'approved'), ('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('group_guest'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Admins can see all boats -->
        <record id="boat_listing_admin_rule" model="ir.rule">
            <field name="name">Admin: All Boats</field>
            <field name="model_id" ref="model_boat_listing"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_boat_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Record Rules for Bookings -->
        
        <!-- Rule: Guests can only see their own bookings -->
        <record id="booking_guest_rule" model="ir.rule">
            <field name="name">Guest: Own Bookings Only</field>
            <field name="model_id" ref="model_boat_booking"/>
            <field name="domain_force">[('guest_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_guest'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Boat owners can see bookings for their boats -->
        <record id="booking_owner_rule" model="ir.rule">
            <field name="name">Boat Owner: Bookings for Own Boats</field>
            <field name="model_id" ref="model_boat_booking"/>
            <field name="domain_force">[('boat_id.owner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_boat_owner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Admins can see all bookings -->
        <record id="booking_admin_rule" model="ir.rule">
            <field name="name">Admin: All Bookings</field>
            <field name="model_id" ref="model_boat_booking"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_boat_admin'))]"/>
        </record>
        
        <!-- Record Rules for Reviews -->
        
        <!-- Rule: Guests can see all published reviews -->
        <record id="review_public_rule" model="ir.rule">
            <field name="name">Public: Published Reviews</field>
            <field name="model_id" ref="model_boat_review"/>
            <field name="domain_force">[('is_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('group_guest'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Guests can edit their own reviews -->
        <record id="review_guest_own_rule" model="ir.rule">
            <field name="name">Guest: Own Reviews</field>
            <field name="model_id" ref="model_boat_review"/>
            <field name="domain_force">[('guest_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_guest'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Rule: Boat owners can see reviews for their boats -->
        <record id="review_owner_rule" model="ir.rule">
            <field name="name">Boat Owner: Reviews for Own Boats</field>
            <field name="model_id" ref="model_boat_review"/>
            <field name="domain_force">[('boat_id.owner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_boat_owner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
        </record>
        
        <!-- Rule: Admins can see and moderate all reviews -->
        <record id="review_admin_rule" model="ir.rule">
            <field name="name">Admin: All Reviews</field>
            <field name="model_id" ref="model_boat_review"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_boat_admin'))]"/>
        </record>
        
    </data>
</odoo>