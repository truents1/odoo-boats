<odoo>
  <record id="view_boat_type_tree" model="ir.ui.view">
    <field name="name">boat.type.tree</field>
    <field name="model">boat.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="parent_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_boat_type_form" model="ir.ui.view">
    <field name="name">boat.type.form</field>
    <field name="model">boat.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="parent_id" options="{'no_create': True}"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_boat_types" model="ir.actions.act_window">
    <field name="name">Boat Types</field>
    <field name="res_model">boat.type</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>