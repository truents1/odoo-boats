<odoo>
  <record id="act_locations" model="ir.actions.act_window">
    <field name="name">Locations</field>
    <field name="res_model">boat.master.location</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="act_amenities" model="ir.actions.act_window">
    <field name="name">Amenities</field>
    <field name="res_model">boat.master.amenity</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="act_boat_types" model="ir.actions.act_window">
    <field name="name">Boat Types</field>
    <field name="res_model">boat.master.boat_type</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_master_root" name="Master Data" parent="base.menu_custom" sequence="50"/>
  <menuitem id="menu_master_locations" parent="menu_master_root" action="act_locations" sequence="10"/>
  <menuitem id="menu_master_amenities" parent="menu_master_root" action="act_amenities" sequence="20"/>
  <menuitem id="menu_master_types" parent="menu_master_root" action="act_boat_types" sequence="30"/>
</odoo>
