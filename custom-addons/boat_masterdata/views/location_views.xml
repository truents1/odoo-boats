<odoo>
  <record id="view_boat_location_tree" model="ir.ui.view">
    <field name="name">boat.location.tree</field>
    <field name="model">boat.location</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="latitude"/>
        <field name="longitude"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_boat_location_form" model="ir.ui.view">
    <field name="name">boat.location.form</field>
    <field name="model">boat.location</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="latitude"/>
            <field name="longitude"/>
            <field name="image_1920"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_boat_locations" model="ir.actions.act_window">
    <field name="name">Locations</field>
    <field name="res_model">boat.location</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>