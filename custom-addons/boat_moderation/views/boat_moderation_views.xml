<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_boat_moderation_kanban" model="ir.ui.view">
    <field name="name">boat.boat.kanban.moderation</field>
    <field name="model">boat.boat</field>
    <field name="arch" type="xml">
      <kanban default_group_by="state">
        <field name="name" />
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <strong>
                <t t-esc="record.name.value" />
              </strong>
              <div>
                <t t-esc="record.region_id.value" />
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <data>

    <!-- Action for Moderation list (adjust model if different) -->
    <record id="action_boat_moderation" model="ir.actions.act_window">
      <field name="name">Moderation</field>
      <field name="res_model">boat.moderation</field>
      <field name="view_mode">tree,form</field>
      <field name="target">current</field>
    </record>

    <!-- Menu under Boats root -->
    <menuitem id="menu_boat_moderation"
      name="Moderation"
      parent="boat_core.menu_boat_backend_root"
      action="action_boat_moderation" />

  </data>

</odoo>