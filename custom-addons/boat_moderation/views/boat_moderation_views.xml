<odoo>

  <record id="view_boat_form_moderation" model="ir.ui.view">
    <field name="name">boat.boat.form.moderation</field>
    <field name="model">boat.boat</field>
    <field name="inherit_id" ref="boat_core.view_boat_form" />
    <field name="arch" type="xml">
      <xpath expr="//form/sheet" position="before">
        <header>
          <button name="action_submit_for_review" type="object" string="Submit for Review"
            class="btn-primary"
            invisible="[['state','!=','draft']]" />
          <button name="action_approve" type="object" string="Approve"
            class="btn-primary"
            invisible="[['state','!=','under_review']]" />
          <button name="action_reject" type="object" string="Reject"
            class="btn-secondary"
            invisible="[['state','!=','under_review']]" />
        </header>
      </xpath>
    </field>
  </record>

  <record id="action_boat_moderation" model="ir.actions.act_window">
    <field name="name">Moderation</field>
    <field name="res_model">boat.boat</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="domain">[("state", "in", ["draft", "under_review"])]</field>
  </record>

  <menuitem id="menu_boat_moderation_root" name="Boats Moderation" parent="boat_core.menu_boat_root"
    sequence="40" groups="boat_moderation.group_boat_moderator" />
  <menuitem id="menu_boat_moderation" name="Moderation Queue" parent="menu_boat_moderation_root"
    action="action_boat_moderation" groups="boat_moderation.group_boat_moderator" />

</odoo>