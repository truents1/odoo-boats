<odoo>
  <record id="view_boat_moderation_kanban" model="ir.ui.view">
    <field name="name">boat.boat.kanban.moderation</field>
    <field name="model">boat.boat</field>
    <field name="arch" type="xml">
      <kanban default_group_by="state">
        <field name="name"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <strong><t t-esc="record.name.value"/></strong>
              <div><t t-esc="record.region_id.value"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <menuitem id="menu_boat_moderation" name="Moderation" parent="menu_boat_backend_root" action="action_boat_moderation"/>
  <record id="action_boat_moderation" model="ir.actions.act_window">
    <field name="name">Boats Moderation</field>
    <field name="res_model">boat.boat</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="domain">[('state','in',('submitted','approved','rejected'))]</field>
    <field name="context">{{}}</field>
    <field name="view_id" ref="view_boat_moderation_kanban"/>
  </record>
</odoo>
