<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Window action -->
    <record id="action_boat_moderation" model="ir.actions.act_window">
      <field name="name">Moderation</field>
      <field name="res_model">boat.moderation</field>
      <field name="view_mode">tree,form</field>
      <field name="target">current</field>
    </record>

    <!-- Menus: attach under boat_core.menu_boat_backend_root -->
    <menuitem id="menu_boat_moderation_root"
      name="Moderation"
      parent="boat_core.menu_boat_backend_root"
      sequence="40" />

    <menuitem id="menu_boat_moderation"
      name="Submissions"
      parent="menu_boat_moderation_root"
      action="action_boat_moderation"
      sequence="10" />

    <!-- Minimal views so the action can open -->
    <record id="view_boat_moderation_tree" model="ir.ui.view">
      <field name="name">boat.moderation.tree</field>
      <field name="model">boat.moderation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="state" />
          <field name="create_date" />
        </tree>
      </field>
    </record>

    <record id="view_boat_moderation_form" model="ir.ui.view">
      <field name="name">boat.moderation.form</field>
      <field name="model">boat.moderation</field>
      <field name="arch" type="xml">
        <form string="Moderation">
          <sheet>
            <group>
              <field name="name" />
              <field name="state" />
              <!-- add other fields from your model -->
            </group>
          </sheet>
        </form>
      </field>
    </record>

</odoo>