<odoo>
  <record id="view_boat_moderation_tree" model="ir.ui.view">
    <field name="name">boat.moderation.tree</field>
    <field name="model">boat.moderation</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_boat_moderation_form" model="ir.ui.view">
    <field name="name">boat.moderation.form</field>
    <field name="model">boat.moderation</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="state"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_boat_moderation" model="ir.actions.act_window">
    <field name="name">Moderation</field>
    <field name="res_model">boat.moderation</field>
    <field name="view_mode">tree,form</field>
    <field name="target">current</field>
  </record>
</odoo>
