<odoo>
  <record id="group_boat_moderator" model="res.groups">
    <field name="name">Boat Moderators</field>
    <field name="category_id" ref="base.module_category_hidden"/>
  </record>

  <record id="rule_boat_moderator_all" model="ir.rule">
    <field name="name">Boat: moderators see all</field>
    <field name="model_id" ref="boat_core.model_boat_boat"/>
    <field name="groups" eval="[(4, ref('boat_moderation.group_boat_moderator'))]"/>
    <field name="domain_force">[(1, '=', 1)]</field>
  </record>

  <record id="rule_boat_image_moderator_all" model="ir.rule">
    <field name="name">Boat Image: moderators see all</field>
    <field name="model_id" ref="boat_core.model_boat_boat_image"/>
    <field name="groups" eval="[(4, ref('boat_moderation.group_boat_moderator'))]"/>
    <field name="domain_force">[(1, '=', 1)]</field>
  </record>
</odoo>