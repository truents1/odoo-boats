<odoo>
  <record id="view_boat_tree" model="ir.ui.view">
    <field name="name">boat.boat.tree</field>
    <field name="model">boat.boat</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="location_id" />
        <field name="type_id" />
        <field name="state" />
        <field name="owner_id" />
        <field name="create_date" />
      </tree>
    </field>
  </record>

  <record id="view_boat_form" model="ir.ui.view">
    <field name="name">boat.boat.form</field>
    <field name="model">boat.boat</field>
    <field name="arch" type="xml">
      <form string="Boat">
        <sheet>
          <group>
            <field name="name" />
            <field name="description" widget="text" />
            <field name="owner_id" />
            <field name="location_id" />
            <field name="type_id" />
            <field name="amenity_ids" widget="many2many_tags" />
            <field name="state" widget="statusbar" />
            <field name="is_published" />
          </group>
          <notebook>
            <page string="Images">
              <field name="image_ids">
                <tree editable="bottom">
                  <field name="image" widget="image" />
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
    <group>
      <field name="name" />
      <field name="description" widget="text" />
      <field name="location_id" options="{'no_create': True}" />
      <field name="type_id" options="{'no_create': True}" />
      <field name="amenity_ids" options="{'no_create': True}" />
    </group>
  </record>
</odoo>