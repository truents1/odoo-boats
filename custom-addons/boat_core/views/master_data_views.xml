<odoo>
  <!-- Locations -->
  <record id="view_location_tree" model="ir.ui.view">
    <field name="name">boat.location.tree</field>
    <field name="model">boat.location</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="sequence"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_location_form" model="ir.ui.view">
    <field name="name">boat.location.form</field>
    <field name="model">boat.location</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="sequence"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Types -->
  <record id="view_type_tree" model="ir.ui.view">
    <field name="name">boat.type.tree</field>
    <field name="model">boat.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="sequence"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_type_form" model="ir.ui.view">
    <field name="name">boat.type.form</field>
    <field name="model">boat.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="sequence"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Amenities -->
  <record id="view_amenity_tree" model="ir.ui.view">
    <field name="name">boat.amenity.tree</field>
    <field name="model">boat.amenity</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_amenity_form" model="ir.ui.view">
    <field name="name">boat.amenity.form</field>
    <field name="model">boat.amenity</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
