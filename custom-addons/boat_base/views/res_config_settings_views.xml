<!-- boat_base/views/res_config_settings_views.xml -->
<!-- ============================================ -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_boat" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.boat</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Boat Management" string="Boat Management" data-key="boat_base" groups="boat_base.group_boat_manager">
                    <h2>Commission Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="default_commission_rate"/>
                                <div class="text-muted">
                                    Default commission rate for bookings
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="default_commission_rate" class="oe_inline"/> %
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="default_booking_advance"/>
                                <div class="text-muted">
                                    Default advance payment percentage
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="default_booking_advance" class="oe_inline"/> %
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h2>Booking Rules</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="cancellation_days"/>
                                <div class="text-muted">
                                    Days before travel for free cancellation
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="cancellation_days" class="oe_inline"/> days
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="min_advance_booking_hours"/>
                                <div class="text-muted">
                                    Minimum hours before travel to make booking
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="min_advance_booking_hours" class="oe_inline"/> hours
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
    <record id="action_boat_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'boat_base'}</field>
    </record>
</odoo>
