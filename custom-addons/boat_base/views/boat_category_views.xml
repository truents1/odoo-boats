<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Boat Category Tree View -->
    <record id="view_boat_category_tree" model="ir.ui.view">
        <field name="name">boat.category.tree</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="boat_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Boat Category Form View -->
    <record id="view_boat_category_form" model="ir.ui.view">
        <field name="name">boat.category.form</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <form string="Boat Category">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [90, 90]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="boat_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Category description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Boat Category Kanban View -->
    <record id="view_boat_category_kanban" model="ir.ui.view">
        <field name="name">boat.category.kanban</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="boat_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('boat.category', 'image', record.id.raw_value)" alt="Category"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill">
                                            <field name="boat_count"/> Boats
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Boat Category Action -->
    <record id="action_boat_category" model="ir.actions.act_window">
        <field name="name">Boat Categories</field>
        <field name="res_model">boat.category</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first boat category
            </p>
            <p>
                Categories help organize boats by type (e.g., Houseboat, Yacht, Sailboat).
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_boat_category" 
              name="Categories" 
              parent="menu_boat_root" 
              action="action_boat_category" 
              sequence="30"/>
</odoo>