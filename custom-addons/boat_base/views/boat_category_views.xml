<!-- boat_base/views/boat_category_views.xml -->
<!-- ============================================ -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_boat_category_tree" model="ir.ui.view">
        <field name="name">boat.category.tree</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <tree string="Boat Categories">
                <field name="complete_name"/>
                <field name="code"/>
                <field name="boat_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_boat_category_form" model="ir.ui.view">
        <field name="name">boat.category.form</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <form string="Boat Category">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                        <field name="code" placeholder="Category Code"/>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="boat_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Category description..."/>
                            <separator string="Characteristics"/>
                            <field name="characteristics" placeholder="Unique characteristics of this boat type..."/>
                        </page>
                        <page string="Boats" groups="boat_base.group_boat_moderator">
                            <field name="boat_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="location_id"/>
                                    <field name="owner_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_boat_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">boat.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create boat categories
            </p>
            <p>
                Categories help organize different types of boats.
            </p>
        </field>
    </record>
</odoo>