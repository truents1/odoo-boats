<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Boat Location Tree View -->
    <record id="view_boat_location_tree" model="ir.ui.view">
        <field name="name">boat.location.tree</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city"/>
                <field name="state_id" optional="show"/>
                <field name="country_id" optional="show"/>
                <field name="boat_count"/>
                <field name="phone" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Boat Location Form View -->
    <record id="view_boat_location_form" model="ir.ui.view">
        <field name="name">boat.location.form</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <form string="Boat Location">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [90, 90]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Location Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="boat_count"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address" name="address">
                            <group>
                                <group>
                                    <field name="street" placeholder="Street..."/>
                                    <field name="street2" placeholder="Street 2..."/>
                                    <field name="city" placeholder="City"/>
                                    <field name="state_id" placeholder="State" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="zip" placeholder="ZIP"/>
                                    <field name="country_id" placeholder="Country" options="{'no_open': True, 'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Location description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Boat Location Kanban View -->
    <record id="view_boat_location_kanban" model="ir.ui.view">
        <field name="name">boat.location.kanban</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="city"/>
                <field name="image"/>
                <field name="boat_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('boat.location', 'image', record.id.raw_value)" alt="Location"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="city"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill">
                                            <field name="boat_count"/> Boats
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Boat Location Action -->
    <record id="action_boat_location" model="ir.actions.act_window">
        <field name="name">Boat Locations</field>
        <field name="res_model">boat.location</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first boat location
            </p>
            <p>
                Locations represent marinas, docks, or areas where boats are stationed.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_boat_location" 
              name="Locations" 
              parent="menu_boat_root" 
              action="action_boat_location" 
              sequence="40"/>
</odoo>