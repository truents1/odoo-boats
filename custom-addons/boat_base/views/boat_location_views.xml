<!-- ============================================ -->
<!-- boat_base/views/boat_location_views.xml -->
<!-- ============================================ -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_boat_location_tree" model="ir.ui.view">
        <field name="name">boat.location.tree</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <tree string="Boat Locations">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="boat_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_boat_location_form" model="ir.ui.view">
        <field name="name">boat.location.form</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <form string="Boat Location">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Location Name"/>
                        </h1>
                        <field name="code" placeholder="Location Code"/>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="state_id" domain="[('country_id', '=', country_id)]" options="{'no_create': True}"/>
                            <field name="city"/>
                            <field name="zip"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="boat_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address">
                            <group>
                                <field name="street" placeholder="Street..."/>
                                <field name="street2" placeholder="Street 2..."/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                            <separator string="Highlights"/>
                            <field name="highlights" placeholder="Key highlights of this location..."/>
                        </page>
                        <page string="SEO">
                            <group>
                                <field name="website_meta_title"/>
                                <field name="website_meta_description"/>
                                <field name="website_meta_keywords"/>
                            </group>
                        </page>
                        <page string="Boats" groups="boat_base.group_boat_moderator">
                            <field name="boat_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="owner_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_boat_location_search" model="ir.ui.view">
        <field name="name">boat.location.search</field>
        <field name="model">boat.location</field>
        <field name="arch" type="xml">
            <search string="Search Locations">
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Has Boats" name="has_boats" domain="[('boat_count', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="state" context="{'group_by': 'state_id'}"/>
                    <filter string="City" name="city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_boat_location" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">boat.location</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_boat_location_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first boat location
            </p>
            <p>
                Locations represent the areas where boats operate from.
            </p>
        </field>
    </record>
</odoo>