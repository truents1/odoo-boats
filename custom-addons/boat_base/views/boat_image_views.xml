<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Boat Image Kanban View - Gallery Style with Controls -->
    <record id="view_boat_image_kanban" model="ir.ui.view">
        <field name="name">boat.image.kanban</field>
        <field name="model">boat.image</field>
        <field name="arch" type="xml">
            <kanban class="o_boat_image_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="image_256"/>
                <field name="is_featured"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_image_card">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('boat.image', 'image_256', record.id.raw_value)" 
                                     alt="Boat Image" 
                                     class="o_image_64_max"/>
                                
                                <!-- Featured Badge -->
                                <div class="o_kanban_image_featured_badge" t-if="record.is_featured.raw_value">
                                    <i class="fa fa-star text-warning" title="Featured Image"/> Featured
                                </div>
                                
                                <!-- Action Buttons Overlay -->
                                <div class="o_kanban_image_actions">
                                    <!-- Set Featured Button -->
                                    <button type="object" 
                                            name="action_set_featured" 
                                            class="btn btn-sm btn-primary o_kanban_image_action_btn"
                                            t-if="!record.is_featured.raw_value"
                                            title="Set as Featured Image">
                                        <i class="fa fa-star-o"/> Set Featured
                                    </button>
                                    
                                    <!-- Remove Featured Button -->
                                    <button type="object" 
                                            name="action_remove_featured" 
                                            class="btn btn-sm btn-warning o_kanban_image_action_btn"
                                            t-if="record.is_featured.raw_value"
                                            title="Remove Featured Status">
                                        <i class="fa fa-star"/> Remove Featured
                                    </button>
                                    
                                    <!-- Delete Button -->
                                    <button type="delete" 
                                            class="btn btn-sm btn-danger o_kanban_image_action_btn"
                                            title="Delete Image">
                                        <i class="fa fa-trash-o"/> Delete
                                    </button>
                                </div>
                            </div>
                            
                            <div class="o_kanban_details">
                                <div class="o_kanban_details_wrapper">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        Sequence: <field name="sequence"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Boat Image Tree View -->
    <record id="view_boat_image_tree" model="ir.ui.view">
        <field name="name">boat.image.tree</field>
        <field name="model">boat.image</field>
        <field name="arch" type="xml">
            <tree string="Boat Images" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="image_128" widget="image" optional="show"/>
                <field name="name"/>
                <field name="boat_id"/>
                <field name="is_featured" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Boat Image Form View -->
    <record id="view_boat_image_form" model="ir.ui.view">
        <field name="name">boat.image.form</field>
        <field name="model">boat.image</field>
        <field name="arch" type="xml">
            <form string="Boat Image">
                <header>
                    <button name="action_set_featured" 
                            string="Set as Featured" 
                            type="object" 
                            class="btn-primary"
                            invisible="is_featured"/>
                    <button name="action_remove_featured" 
                            string="Remove Featured" 
                            type="object" 
                            class="btn-warning"
                            invisible="not is_featured"/>
                    <field name="is_featured" widget="status_badge" 
                           statusbar_visible="False,True"/>
                </header>
                <sheet>
                    <field name="image_1920" 
                           widget="image" 
                           class="oe_avatar" 
                           options="{'preview_image': 'image_512', 'size': [300, 300]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="boat_id" options="{'no_create': True}"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="is_featured" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Boat Image Action -->
    <record id="action_boat_image" model="ir.actions.act_window">
        <field name="name">Boat Images</field>
        <field name="res_model">boat.image</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload images for your boats
            </p>
            <p>
                Add multiple images to showcase your boat. Set one as featured to use it as the main display image.
            </p>
        </field>
    </record>
</odoo>