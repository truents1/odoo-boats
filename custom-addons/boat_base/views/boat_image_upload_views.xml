<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Multi-Image Upload Wizard Form -->
    <record id="view_boat_image_upload_wizard_form" model="ir.ui.view">
        <field name="name">boat.image.upload.wizard.form</field>
        <field name="model">boat.image.upload.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="boat_id" invisible="1"/>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/> Upload up to 6 images at once. Click on each box to select images.
                    </div>
                </group>
                <group>
                    <group>
                        <field name="image_1" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                        <field name="image_2" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                        <field name="image_3" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                    </group>
                    <group>
                        <field name="image_4" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                        <field name="image_5" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                        <field name="image_6" widget="image" options="{'size': [300, 300]}" nolabel="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_upload_images" string="Upload Images" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Upload Wizard -->
    <record id="action_boat_image_upload" model="ir.actions.act_window">
        <field name="name">Upload Images</field>
        <field name="res_model">boat.image.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_boat_id': active_id}</field>
    </record>
</odoo>