<!-- boat_base/security/boat_security.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categories for boat management groups -->
    <record id="module_category_boat_management" model="ir.module.category">
        <field name="name">Boat Management</field>
        <field name="description">Manage boat rental system</field>
        <field name="sequence">50</field>
    </record>
    
    <!-- Groups -->
    <record id="group_boat_user" model="res.groups">
        <field name="name">Guest</field>
        <field name="category_id" ref="module_category_boat_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can view boats and make bookings</field>
    </record>
    
    <record id="group_boat_owner" model="res.groups">
        <field name="name">Boat Owner</field>
        <field name="category_id" ref="module_category_boat_management"/>
        <field name="implied_ids" eval="[(4, ref('group_boat_user'))]"/>
        <field name="comment">Can manage own boats and view bookings</field>
    </record>
    
    <record id="group_boat_moderator" model="res.groups">
        <field name="name">Moderator</field>
        <field name="category_id" ref="module_category_boat_management"/>
        <field name="implied_ids" eval="[(4, ref('group_boat_owner'))]"/>
        <field name="comment">Can approve/reject boat listings</field>
    </record>
    
    <record id="group_boat_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_boat_management"/>
        <field name="implied_ids" eval="[(4, ref('group_boat_moderator'))]"/>
        <field name="comment">Full access to boat management system</field>
    </record>
    
    <!-- Record Rules -->
    
    <!-- Boat owners can only see and edit their own boats -->
    <record id="boat_boat_owner_rule" model="ir.rule">
        <field name="name">Boat: Owner can manage own boats</field>
        <field name="model_id" ref="model_boat_boat"/>
        <field name="domain_force">[('owner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_boat_owner'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Moderators can see all boats -->
    <record id="boat_boat_moderator_rule" model="ir.rule">
        <field name="name">Boat: Moderators see all boats</field>
        <field name="model_id" ref="model_boat_boat"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_boat_moderator'))]"/>
    </record>
    
    <!-- Public users can only see approved boats -->
    <record id="boat_boat_public_rule" model="ir.rule">
        <field name="name">Boat: Public sees approved boats</field>
        <field name="model_id" ref="model_boat_boat"/>
        <field name="domain_force">[('state', '=', 'approved')]</field>
        <field name="groups" eval="[(4, ref('group_boat_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>