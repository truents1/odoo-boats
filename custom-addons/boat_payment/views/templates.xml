<odoo>
  <template id="payment_placeholder" name="Payment Placeholder">
    <t t-call="website.layout">
      <main id="wrap" class="oe_structure">
        <section class="container mt-4">
          <h2>Checkout</h2>
          <t t-if="booking">
            <p>Booking: <t t-esc="booking.id"/></p>
            <p>Advance to pay: <t t-esc="booking.advance_amount"/></p>
          </t>
          <t t-if="not booking">
            <div class="alert alert-danger">No booking in context.</div>
          </t>
        </section>
      </main>
    </t>
  </template>
</odoo>
