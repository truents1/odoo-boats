<odoo>
  <record id="view_boat_tax_category_tree" model="ir.ui.view">
    <field name="name">boat.taxonomy.category.tree</field>
    <field name="model">boat.taxonomy.category</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="code" />
        <field name="allow_tree" />
        <field name="active" />
      </tree>
    </field>
  </record>

  <record id="view_boat_tax_category_form" model="ir.ui.view">
    <field name="name">boat.taxonomy.category.form</field>
    <field name="model">boat.taxonomy.category</field>
    <field name="arch" type="xml">
      <form string="Taxonomy Category">
        <sheet>
          <group>
            <field name="name" />
            <field name="code" />
            <field name="allow_tree" />
            <field name="active" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_boat_taxonomy_tree" model="ir.ui.view">
    <field name="name">boat.taxonomy.tree</field>
    <field name="model">boat.taxonomy</field>
    <field name="arch" type="xml">
      <tree>
        <field name="category_id" />
        <field name="name" />
        <field name="code" />
        <field name="parent_id" />
        <field name="sequence" />
        <field name="active" />
      </tree>
    </field>
  </record>

  <record id="view_boat_taxonomy_form" model="ir.ui.view">
    <field name="name">boat.taxonomy.form</field>
    <field name="model">boat.taxonomy</field>
    <field name="arch" type="xml">
      <form string="Taxonomy">
        <sheet>
          <group>
            <field name="category_id" />
            <field name="name" />
            <field name="code" />
            <field name="parent_id" />
            <field name="sequence" />
            <field name="active" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_boat_tax_categories" model="ir.actions.act_window">
    <field name="name">Taxonomy Categories</field>
    <field name="res_model">boat.taxonomy.category</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="action_boat_taxonomies" model="ir.actions.act_window">
    <field name="name">Taxonomies</field>
    <field name="res_model">boat.taxonomy</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_boat_masterdata_root" name="Master Data" parent="base.menu_custom"
    sequence="50" />
  <menuitem id="menu_boat_tax_categories" name="Categories" parent="menu_boat_masterdata_root"
    action="action_boat_tax_categories" sequence="10" />
  <menuitem id="menu_boat_taxonomies" name="Values" parent="menu_boat_masterdata_root"
    action="action_boat_taxonomies" sequence="20" />


</odoo>