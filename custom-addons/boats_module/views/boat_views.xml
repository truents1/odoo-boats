<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Boat Listing Views -->
    <record id="boat_listing_tree_view" model="ir.ui.view">
        <field name="name">boat.listing.tree</field>
        <field name="model">boat.listing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="boat_listing_form_view" model="ir.ui.view">
        <field name="name">boat.listing.form</field>
        <field name="model">boat.listing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="owner_id"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Boat Region Views -->
    <record id="boat_region_tree_view" model="ir.ui.view">
        <field name="name">boat.region.tree</field>
        <field name="model">boat.region</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="country_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="boat_region_form_view" model="ir.ui.view">
        <field name="name">boat.region.form</field>
        <field name="model">boat.region</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="country_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Boat Category Views -->
    <record id="boat_category_tree_view" model="ir.ui.view">
        <field name="name">boat.category.tree</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="boat_category_form_view" model="ir.ui.view">
        <field name="name">boat.category.form</field>
        <field name="model">boat.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>
